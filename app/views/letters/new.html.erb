
<section id="progressbar-container">
  <ul id="progressbar">
    <li class="showing">Company Info</li>
    <li>Applicant Info</li>
    <li>Position Info</li>
    <li>Benefits</li>
    <li>Other Info</li>
  </ul>
</section>

<%= form_for @letter, html: {id: "multi-step-form"} do |f| %>

  <fieldset>
      <span>
        <%= link_to "Export as .rtf", {:controller => :letters, :action => :download}, {:method => :post} %>
      </span>
      <h2 class="frame-title">Company Info</h2>
      <h3 class="frame-subtitle">Step 1 of 5</h3>
      <%= f.text_field :co_name, :placeholder => "Company Name" %>
      <%= f.text_field :co_address_1, :placeholder => "Address Line 1" %>
      <%= f.text_field :co_address_2, :placeholder => "Address Line 2" %>
      <%= f.text_field :co_city_state_zip, :placeholder => "City, State Zip" %>
      <input type="button" name="previous" class="previous action-button" value="Previous" />
      <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>

  <fieldset>
      <h2 class="frame-title">Applicant Info</h2>
      <h3 class="frame-subtitle">Step 2 of 5</h3>
      <%= f.text_field :ap_name, :placeholder => "Applicant Name" %>
      <%= f.text_field :ap_address_1, :placeholder => "Address Line 1" %>
      <%= f.text_field :ap_address_2, :placeholder => "Address Line 2" %>
      <%= f.text_field :ap_city_state_zip, :placeholder => "City State Zip"%>
      <input type="button" name="previous" class="previous action-button" value="Previous" />
      <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>

  <fieldset>
    <h2 class="frame-title">Position Info</h2>
    <h3 class="frame-subtitle">Step 3 of 5</h3>
      <%= f.text_field :pos_title, :placeholder => "Position" %>
      <%= f.text_field :supervisor, :placeholder => "Supervisor" %>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>

  <fieldset>
    <h2 class="frame-title">Other Stuff</h2>
    <h3 class="frame-subtitle">Step 4 of 5</h3>
      <%= f.date_field :start_date, :placeholder => "Start Date" %>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>

  <fieldset>
    <h2 class="frame-title">Other Information</h2>
    <h3 class="frame-subtitle">Step 5 of 5</h3>
    <%= f.date_field :expiry_date, :placeholder => "Offer Expires On" %>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <%= f.submit "Submit", :class => "action-button" %>
  </fieldset>

<% end %>






<section id="letter-container">
  <div id="letter">
    <ul id="letter-list">
      <li><p class="top-right letter_co_name">Company Name</p></li>
      <li><p class="top-right letter_co_address_1">Company Address</p></li>
      <li><p class="top-right letter_co_address_2">Company Address cont.</p></li>
      <li><p class="top-right letter_co_city_state_zip">City, State Zip</p></li>
    </ul>

    <ul>
      <li><p class="applicant-info letter_ap_name">Applicant Name</p></li>
      <li><p class="applicant-info letter_ap_address_1">Applicant Address</p></li>
      <li><p class="applicant-info letter_ap_address_2">Applicant Address cont.</p></li>
      <li><p class="applicant-info letter_ap_city_state_zip">City, State Zip</p></li>
    </ul>

    <ul>
      <li>Dear <span class="applicant-name">Applicant Name</span>,</li>
      <li><p></p></li>
      <li><span class="company-info letter_co_name">Company Name</span> is pleased to offer you employment on the following terms:</li>
      <li><p></p></li>
    </ul>

    <ul>
      <li><p class="applicant-info letter_pos_title">Position Title</p></li>
      <li><p class="applicant-info letter_supervisor">Supervisor's Name</p></li>
      <li><p class="applicant-info letter_start_date">Company Name</p></li>
      <li><p class="applicant-info letter_expiry_date">Company Name</p></li>
    </ul>
  </div>
</section>
