<div class="header-image"></div>

<section id="progressbar-container">
  <ul id="progressbar">
    <li class="showing">Company Info</li>
    <li>Applicant Info</li>
    <li>Position Info</li>
    <li>Benefits</li>
    <li>Other Info</li>
  </ul>
</section>

<div id="letter-tool">
  <%= render partial: 'letter' %>
  <%= render partial: 'form' %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Available at</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
    <tr>
      <td><%= letter.co_name %></td>
      <td><%= letter.co_address_1 %></td>
      <td><%= letter.co_address_2 %></td>
      <td><%= letter.ap_name %></td>
      <td><%= letter.ap_address_1 %></td>
      <td><%= letter.ap_address_2 %></td>
      <td><%= letter.pos_title %></td>
      <td><%= link_to 'Show', letter %></td>
      <td><%= link_to 'Edit (with steps)', edit_letter_path(letter) %></td>
      <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>